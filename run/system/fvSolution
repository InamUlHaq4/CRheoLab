FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "D|DD"
    {
        solver          PCG;
        preconditioner  FDIC;
        tolerance       1e-07;
        relTol          0.1;
    }

    sigmaHyd
    {
        solver          PCG;
        preconditioner  FDIC;
        tolerance       1e-07;
        relTol          0.1;
    }

    T1
    {
        absNormResidual 1E-6;
        relNormResidual 1E-3;
        wSOR 1.2;
        solverModel Jacobi; // Jacobi, GaussSiedel, SOR
        matrixFormat CSR; //lOLists // CSR
        maximumIterations 1000;
    }

    T2
    {
        absNormResidual 1E-6;
        relNormResidual 1E-3;
        wSOR 1.2;
        solverModel Jacobi; // Jacobi, GaussSiedel, SOR
        matrixFormat CSR; //lOLists // CSR
        maximumIterations 1000;
    }

}

relaxationFactors
{
    // Under-relaxating the D equation by 0.99-0.9999 can improve convergence in
    // some cases, in particular when there are solidContact boundaries
    equations
    {
        //DDEqn    0.999;
    }

    // Under-relaxating the D field by 0.1-0.9 can improve convergence in some
    // cases
    fields
    {
        //DD       0.7;
    }
}

